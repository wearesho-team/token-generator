{
  "name": "wearesho-team/token-generator",
  "description": "Library for generating random tokens",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Beton",
      "email": "aleksa.yagich@gmail.com"
    }
  ],
  "scripts": {
    "lint": "phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
    "cover": "phpunit --coverage-clover=coverage.xml",
    "test": "phpunit",
    "post-install-cmd": "cghooks add --ignore-lock",
    "post-update-cmd": "cghooks update"
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "composer lint",
        "composer test"
      ],
      "post-merge": "composer update --lock"
    }
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Wearesho\\Token\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\Token\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.2",
    "horat1us/environment-config": "^1.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "squizlabs/php_codesniffer": "^3.4",
    "brainmaestro/composer-git-hooks": "^2.6"
  }
}
